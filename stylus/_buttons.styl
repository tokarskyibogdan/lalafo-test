button
  outline none !important
  cursor pointer
  border none
  display inline-block
  white-space nowrap

.btn-sell
.btn-go-pro
.btn-post-adds
  text-transform uppercase
  border-radius 4px
  color #fefefe


.btn
  &-sell
    padding 13px 20px
    background-color: #54ba4a
    display inline-block
    font 700 12px "Helvetica Neue"
    &:hover
      color #fefefe
      background-color: #19b40c

  &-go-pro
    padding 8px 30px
    border-radius 4px
    border 1px solid #ffffff
    background-color transparent
    font 700 11px "Open Sans"

  &-post-adds
    font 700 12px "Helvetica Neue"
    width 100%
    height 80px
    background-color #5C96C3
    &:hover
      background-color #386A8C
      text-decoration none
      color white

.btn-add-work-day,
.delete-phone-number,
.btn-add-phone-number
  color #54ba4a
  font 400 12px "Open Sans"
  &:hover
    cursor pointer

#image-input-button
  border 1px solid #adadad
  border-radius 4px
  padding: 7px 14px
  display inline-block
  text-transform uppercase
  color #6a7f8c
  font 500 10px "Helvetica Neue"
  cursor pointer
  margin-right 17px
  &:hover
    background-color: #ebebeb

#btn-reset-form
  border-radius 4px
  border 1px solid #adadad
  color #6a7f8c
  background-color transparent
  &:hover
    background-color: #ff7261
    color white

#btn-save-form
  color white
  border none
  background-color #54ba4a
  &:hover
    background-color: #00ba10

#btn-reset-form
#btn-save-form
  margin 10px
  outline none
  cursor pointer
  font 700 12px 'Helvetica Neue'
  border-radius 4px
  width 150px
  height 36px

.btn-full-version
  color #54ba4a
  font 400 12px "Open Sans"
  text-decoration none
  &:hover
    text-decoration none
    color #1fba00

